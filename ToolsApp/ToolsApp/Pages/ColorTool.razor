@page "/color-tool"

@using ToolsApp.Models.Colors
@using ToolsApp.Components.ColorTool

<header>
  <h3>Color Tool</h3>
</header>

<ul>
	@foreach(var color in Colors)
	{
		<li>@color.Name</li>
	}
</ul>

<ColorForm ButtonText="Add Color" OnSubmitColor="AppendColor" />


@code {

	private List<Color> Colors { get; set; } = new()
		{
			new(1, "red", "ff0000"),
			new(2, "green", "00ff00"),
			new(3, "blue", "0000ff"),
		};

	private void AppendColor(NewColor color)
	{
		Colors.Add(
				new(
					Colors.Max(c => c.Id) + 1,
					color.Name,
					color.Hexcode
				)
		);
	}

}
